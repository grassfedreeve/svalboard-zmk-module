/dts-v1/;
#include <raspberrypi/rpi_pico/rp2040.dtsi>
#include <arm/raspberrypi/rp2040-boot-mode-retention.dtsi>
#include <zephyr/dt-bindings/led/led.h>
#include <zephyr/dt-bindings/pinctrl/rpi-pico-rp2040-pinctrl.h>


#include <dt-bindings/zmk/matrix_transform.h>
#include "svalboard-layouts.dtsi"
#include <physical_layouts.dtsi>



/ {
    model = "Svalboard ZMK";
    compatible = "svalboard";

    chosen {
        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
        zephyr,flash-controller = &ssi;
        zephyr,code-partition = &code_partition;
        zmk,kscan = &kscan0;
        zmk,physical-layout = &default_layout;
        zmk,split-uart = &pio0_uart0;
//        zmk,underglow = &led_strip;
    };
    
    wired_split {
        compatible = "zmk,wired-split";
        device = <&pio0_uart0>;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <6>;
        rows = <10>;
        map = <
	RC(4,3)                 RC(3,3)                 RC(2,3)                 RC(1,3)                 RC(6,3)                 RC(7,3)                 RC(8,3)                 RC(9,3)
RC(4,4) RC(4,2) RC(4,1) RC(3,0) RC(3,2) RC(3,1) RC(2,0) RC(2,2) RC(2,1) RC(1,0) RC(1,2) RC(1,1) RC(6,4) RC(6,2) RC(6,1) RC(7,4) RC(7,2) RC(7,1) RC(8,4) RC(8,2) RC(8,1) RC(9,4) RC(9,2) RC(9,1)
	RC(4,0)                 RC(3,4)                 RC(2,4)                 RC(1,4)                 RC(6,0)                 RC(7,0)                 RC(8,0)                 RC(9,0)
								RC(0,3)	RC(0,5) RC(0,1)			RC(5,1)	RC(5,5) RC(5,3)
								RC(0,4)	RC(0,2) RC(0,0)			RC(5,0)	RC(5,2) RC(5,4)
        >;
    };
};

&flash0 {
    reg = <0x10000000 DT_SIZE_M(16)>;

    partitions {
        compatible = "fixed-partitions";
        #address-cells = <1>;
        #size-cells = <1>;

        /* Reserved memory for the second stage bootloader */
        second_stage_bootloader: partition@0 {
            reg = <0x00000000 0x100>;
            read-only;
        };

        /*
         * Usable flash. Starts at 0x100, after the bootloader.
         */
        code_partition: partition@100 {
            reg = <0x100 (DT_SIZE_M(2) - 0x100 - DT_SIZE_K(512))>;
            read-only;
        };

        storage_partition: partition@180000 {
            reg = <0x180000 DT_SIZE_K(512)>;
        };
    };
};

zephyr_udc0: &usbd {
    status = "okay";
};

&gpio0 {
    status = "okay";
};

&pio0 {
    status = "okay";

    pio0_uart0: serial {
        status = "okay";
        compatible = "raspberrypi,pico-uart-pio";
        pinctrl-0 = <&pio0_uart0_default>;
        pinctrl-names = "default";
        current-speed = <115200>;
    };
};

/ {
    split_inputs {
        #address-cells = <1>;
        #size-cells = <0>;

        trackball_split_left: trackball_split_left@0 {
            compatible = "zmk,input-split";
            reg = <0>;
        };

        trackball_split_right: trackball_split_right@1 {
            compatible = "zmk,input-split";
            reg = <1>;
        };
    };

    trackball_listener_left: trackball_listener_left {
        compatible = "zmk,input-listener";
        status = "disabled";
        device = <&trackball_split_left>;
    };

    trackball_listener_right: trackball_listener_right {
        compatible = "zmk,input-listener";
        status = "disabled";
        device = <&trackball_split_right>;
    };
};

&timer {
    status = "okay";
};

&rtc {
    clocks = <&clocks RPI_PICO_CLKID_CLK_RTC>;
    status = "okay";
};

&vreg {
    regulator-always-on;
    regulator-allowed-modes = <REGULATOR_RPI_PICO_MODE_NORMAL>;
};

&default_layout {
    transform = <&default_transform>;
};
